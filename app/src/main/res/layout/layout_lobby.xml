<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lobby.LobbyActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AEE7E8"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="共乘資訊"
            android:textColor="#14354C"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="188dp"
            tools:layout_editor_absoluteY="18dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24"
            android:layout_height="wrap_content" android:id="@+id/toolbar_back" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="387dp" android:layout_margin="15dp" android:id="@+id/toolbar_add"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content" android:id="@+id/toolbar_search"
            tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="334dp"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/post_itemview"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/rv_allposts"/>

</androidx.constraintlayout.widget.ConstraintLayout>
